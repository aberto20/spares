# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page



GET     /list/bland/                                 controllers.Application.loadBlands()
POST    /save/bland/                                 controllers.Application.saveBland()
POST    /update/bland/                               controllers.Application.updateBland()
POST    /delete/bland/:id                            controllers.Application.deleteBland(id : Long)
GET     /list/vehicle/                               controllers.Application.loadVehicles()
POST    /save/vehicle/                               controllers.Application.saveVehicle()
POST    /update/vehicle/                             controllers.Application.updateVehicle()
POST    /delete/vehicle/                             controllers.Application.deleteVehicle()




# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                            controllers.Assets.at(path="/public", file)

